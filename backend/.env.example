# ============================================
# TRYONYOU-ABVETOS Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# --------------------------------------------
# Server Configuration
# --------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost
API_BASE_URL=http://localhost:3000

# --------------------------------------------
# Manus AI Configuration
# --------------------------------------------
# Environment: 'production' or 'development'
MANUS_ENV=production
# Your Manus Workspace ID (get from Manus dashboard)
MANUS_WORKSPACE_ID=your_workspace_id_here
# Manus API Key (if using API integration)
MANUS_API_KEY=your_manus_api_key_here

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# MySQL/TiDB Connection String
DATABASE_URL=mysql://user:password@localhost:3306/tryonyou_db
# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# --------------------------------------------
# Agent70 Configuration
# --------------------------------------------
# Secret key for Agent70 authentication
AGENT70_SECRET=your_agent70_secret_key_here
# Agent70 execution schedule (cron format)
AGENT70_SCHEDULE=0 0 * * *
# Enable/disable Agent70 automatic execution
AGENT70_ENABLED=true

# --------------------------------------------
# Sistema Fiesta de Listis (Scoring System)
# --------------------------------------------
# Path to store listis scores
LISTIS_DATA_PATH=./backend/data/listis-scores.json
# Points calculation multiplier
LISTIS_POINTS_MULTIPLIER=1.5
# Leaderboard update schedule (cron format)
LISTIS_UPDATE_SCHEDULE=0 */6 * * *

# --------------------------------------------
# newTool Integration (2-month trial)
# --------------------------------------------
# newTool API endpoint
NEWTOOL_API_URL=https://api.newtool.example.com
# newTool API Key
NEWTOOL_API_KEY=your_newtool_api_key_here
# newTool API Secret
NEWTOOL_API_SECRET=your_newtool_api_secret_here
# Enable/disable newTool integration
NEWTOOL_ENABLED=true
# Trial expiration date (YYYY-MM-DD)
NEWTOOL_TRIAL_EXPIRES=2025-02-10

# --------------------------------------------
# ABVETOS-ALBDA Supervisor Configuration
# --------------------------------------------
# Supervisor mode: 'active' or 'passive'
ABVETOS_SUPERVISOR_MODE=active
# Supervisor check interval (milliseconds)
ABVETOS_CHECK_INTERVAL=30000
# Enable supervisor notifications
ABVETOS_NOTIFICATIONS_ENABLED=true

# --------------------------------------------
# Orchestrator Configuration
# --------------------------------------------
# Node orchestrator mode: 'distributed' or 'centralized'
ORCHESTRATOR_MODE=centralized
# Max concurrent workflows
ORCHESTRATOR_MAX_CONCURRENT=5
# Workflow timeout (milliseconds)
ORCHESTRATOR_TIMEOUT=300000

# --------------------------------------------
# Authentication & Security
# --------------------------------------------
# JWT Secret for token generation
JWT_SECRET=your_super_secret_jwt_key_here
# JWT Token expiration (e.g., '1h', '7d', '30d')
JWT_EXPIRES_IN=7d
# API Rate Limiting (requests per minute)
RATE_LIMIT_MAX=100
# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://tryonyou.vercel.app

# --------------------------------------------
# External Integrations
# --------------------------------------------
# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_STORE_URL=your-store.myshopify.com

# Amazon Integration
AMAZON_ACCESS_KEY_ID=your_amazon_access_key_here
AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_key_here
AMAZON_REGION=eu-west-1

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# --------------------------------------------
# Logging & Monitoring
# --------------------------------------------
# Log level: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info
# Log format: 'json' or 'pretty'
LOG_FORMAT=json
# Enable file logging
LOG_TO_FILE=true
# Log file path
LOG_FILE_PATH=./logs/app.log

# --------------------------------------------
# Email & Notifications
# --------------------------------------------
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --------------------------------------------
# Storage & Assets
# --------------------------------------------
# AWS S3 Configuration
S3_BUCKET_NAME=tryonyou-assets
S3_REGION=eu-west-1
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here

# Cloudflare R2 (alternative to S3)
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_here
R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
R2_BUCKET_NAME=tryonyou-r2-bucket

# --------------------------------------------
# AI & Machine Learning
# --------------------------------------------
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Replicate API (for image generation)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# --------------------------------------------
# Development & Testing
# --------------------------------------------
# Enable debug mode
DEBUG=false
# Enable API documentation (Swagger)
ENABLE_API_DOCS=true
# Test database URL
TEST_DATABASE_URL=mysql://user:password@localhost:3306/tryonyou_test

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable experimental features
FEATURE_EXPERIMENTAL=false
# Enable beta features
FEATURE_BETA=false
# Enable maintenance mode
MAINTENANCE_MODE=false
