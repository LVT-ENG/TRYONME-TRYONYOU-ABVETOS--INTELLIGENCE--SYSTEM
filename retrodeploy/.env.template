# Vercel Configuration
# Get these from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_project_id_here
VERCEL_TEAM_ID=your_team_id_here
VERCEL_ORG_ID=your_org_id_here

# GitHub Configuration
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=LVT-ENG/TRYONME-TRYONYOU-ABVETOS--INTELLIGENCE--SYSTEM

# Telegram Bot Configuration
# Get bot token from @BotFather
# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Application Environment
NODE_ENV=production
VITE_ENV=production

# Deployment Configuration
AUTO_DEPLOY_ON_CHANGE=false
MAX_ZIP_COUNT=48
WATCH_INTERVAL=30000

# Domain Configuration
PRODUCTION_DOMAIN=tryonyou.app
STAGING_DOMAIN=staging.tryonyou.app

# NeonDB Configuration (optional)
DATABASE_URL=your_neon_database_url_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=retrodeploy.log

