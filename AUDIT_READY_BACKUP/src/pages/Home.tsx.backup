import React, { useState, useEffect, useRef } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import Webcam from 'react-webcam';
import * as Copy from '../config/copy';
import { generateSessionId, generateAnalysisId } from '../utils/systemSignals';

type View = 'landing' | 'gender' | 'scanning' | 'questions' | 'result';
type Gender = 'male' | 'female' | '';

interface Garment {
  id: string;
  name: string;
  type: string;
  cut: string;
  gender: 'male' | 'female';
  intention: string[];
  human_message: string;
  image: string;
  fit_score: number;
}

const LAFAYETTE_INVENTORY: Garment[] = [
  {
    id: "GL-M-9928",
    name: "Structured Blazer",
    type: "Blazer",
    cut: "Fitted",
    gender: "male",
    intention: ["work", "event"],
    human_message: "This blazer respects your natural structure, ideal for an elegant presence.",
    image: "https://images.unsplash.com/photo-1591047139829-d91aecb6caea?q=80&w=1936&auto=format&fit=crop",
    fit_score: 96
  },
  {
    id: "GL-M-4412",
    name: "Relaxed Fit Shirt",
    type: "Shirt",
    cut: "Fluid",
    gender: "male",
    intention: ["casual", "daily"],
    human_message: "The drape of this fabric accompanies your walk without restrictions.",
    image: "https://images.unsplash.com/photo-1596362051868-f9c5c0b8e8e0?q=80&w=1983&auto=format&fit=crop",
    fit_score: 94
  },
  {
    id: "GL-M-7733",
    name: "Relaxed City Coat",
    type: "Coat",
    cut: "Relaxed",
    gender: "male",
    intention: ["daily", "work"],
    human_message: "Effortless elegance that moves with your daily rhythm.",
    image: "https://images.unsplash.com/photo-1539533018447-63fcce2678e3?q=80&w=1974&auto=format&fit=crop",
    fit_score: 92
  },
  {
    id: "GL-W-9928",
    name: "Structured Blazer",
    type: "Blazer",
    cut: "Fitted",
    gender: "female",
    intention: ["work", "event"],
    human_message: "This blazer respects your natural structure, ideal for an elegant presence.",
    image: "https://images.unsplash.com/photo-1591047139829-d91aecb6caea?q=80&w=1936&auto=format&fit=crop",
    fit_score: 97
  },
  {
    id: "GL-W-4412",
    name: "Fluid Midi Dress",
    type: "Dress",
    cut: "Fluid",
    gender: "female",
    intention: ["casual", "daily", "event"],
    human_message: "The drape of this fabric accompanies your walk without restrictions.",
    image: "https://images.unsplash.com/photo-1595777457583-95e059d581b8?q=80&w=1983&auto=format&fit=crop",
    fit_score: 95
  },
  {
    id: "GL-W-7733",
    name: "Relaxed Linen Shirt",
    type: "Shirt",
    cut: "Relaxed",
    gender: "female",
    intention: ["daily", "work"],
    human_message: "Effortless elegance that moves with your daily rhythm.",
    image: "https://images.unsplash.com/photo-1539533018447-63fcce2678e3?q=80&w=1974&auto=format&fit=crop",
    fit_score: 93
  }
];

const Home = () => {
  const [view, setView] = useState<View>('landing');
  const [scanProgress, setScanProgress] = useState(0);
  const [gender, setGender] = useState<Gender>('');
  const [occasion, setOccasion] = useState('');
  const [feeling, setFeeling] = useState('');
  const [recommendation, setRecommendation] = useState<Garment | null>(null);
  const [sessionId] = useState(generateSessionId());
  const webcamRef = useRef<Webcam>(null);

  // Auto-progress scanning
  useEffect(() => {
    if (view === 'scanning') {
      const interval = setInterval(() => {
        setScanProgress(prev => {
          if (prev >= 100) {
            setTimeout(() => setView('questions'), 500);
            return 100;
          }
          return prev + 2;
        });
      }, 50);
      return () => clearInterval(interval);
    }
  }, [view]);

  const handleSelectGender = (selectedGender: 'male' | 'female') => {
    setGender(selectedGender);
    setScanProgress(0);
    setView('scanning');
  };

  const handleFinishQuestions = () => {
    const finalOccasion = occasion || 'Work';
    const finalFeeling = feeling || 'Fitted';
    const finalGender = gender || 'male';

    // Check operator override
    if (typeof window !== 'undefined' && window.__FORCE_RESULT__) {
      const forced = window.__FORCE_RESULT__;
      const filtered = LAFAYETTE_INVENTORY.filter(item => item.gender === finalGender);
      const result = forced === 'HERO' ? filtered[0] : filtered[filtered.length - 1];
      setRecommendation(result);
      setView('result');
      return;
    }

    const genderFiltered = LAFAYETTE_INVENTORY.filter(item => item.gender === finalGender);
    const match = genderFiltered.find(item => 
      item.intention.includes(finalOccasion.toLowerCase()) && 
      item.cut.toLowerCase() === finalFeeling.toLowerCase()
    );
    
    const fallback = genderFiltered.find(item => 
      item.cut.toLowerCase() === finalFeeling.toLowerCase()
    );

    setRecommendation(match || fallback || genderFiltered[0]);
    setView('result');
  };

  const handleRestart = () => {
    setView('landing');
    setScanProgress(0);
    setGender('');
    setOccasion('');
    setFeeling('');
    setRecommendation(null);
  };

  return (
    <div className="min-h-screen bg-divineo-anthracite text-divineo-beige font-sans overflow-hidden">
      
      {/* HEADER */}
      <header className="fixed top-0 left-0 w-full z-40 px-8 py-6 flex justify-between items-center bg-gradient-to-b from-divineo-anthracite to-transparent">
        <div className="text-divineo-gold text-sm font-bold uppercase tracking-widest">TryOnYou</div>
        <div className="text-[10px] text-gray-500 uppercase tracking-wider">
          {view === 'landing' && 'Welcome'}
          {view === 'gender' && 'Personalization'}
          {view === 'scanning' && 'Scanning'}
          {view === 'questions' && 'Preferences'}
          {view === 'result' && 'Result'}
        </div>
        <div className="text-[8px] text-gray-600 font-mono">{sessionId}</div>
      </header>

      <AnimatePresence mode='wait'>
        
        {/* LANDING */}
        {view === 'landing' && (
          <motion.div
            key="landing"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="flex flex-col items-center justify-center min-h-screen px-6 text-center"
          >
            <motion.h1
              initial={{ y: -50, opacity: 0 }}
              animate={{ y: 0, opacity: 1 }}
              transition={{ delay: 0.2 }}
              className="text-6xl md:text-7xl font-luxury text-divineo-gold mb-6"
            >
              GALERIES LAFAYETTE
            </motion.h1>
            
            <motion.p
              initial={{ y: 20, opacity: 0 }}
              animate={{ y: 0, opacity: 1 }}
              transition={{ delay: 0.4 }}
              className="text-2xl md:text-3xl mb-4 font-light italic text-divineo-beige"
            >
              "We don't sell clothes. We sell certainty."
            </motion.p>

            <motion.p
              initial={{ y: 20, opacity: 0 }}
              animate={{ y: 0, opacity: 1 }}
              transition={{ delay: 0.6 }}
              className="text-lg mb-2 text-gray-300 max-w-2xl"
            >
              {Copy.LANDING_INSTRUCTION}
            </motion.p>

            <motion.p
              initial={{ y: 20, opacity: 0 }}
              animate={{ y: 0, opacity: 1 }}
              transition={{ delay: 0.7 }}
              className="text-sm mb-12 text-gray-500 max-w-2xl"
            >
              {Copy.PRIVACY_NOTICE}
            </motion.p>

            <motion.button
              initial={{ scale: 0.8, opacity: 0 }}
              animate={{ scale: 1, opacity: 1 }}
              transition={{ delay: 0.9 }}
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
              onClick={() => setView('gender')}
              className="bg-divineo-gold text-divineo-anthracite font-bold py-5 px-12 rounded-full tracking-widest text-sm uppercase shadow-[0_0_30px_rgba(197,164,109,0.4)] hover:shadow-[0_0_50px_rgba(197,164,109,0.6)] transition-all"
            >
              Activate My Digital Twin
            </motion.button>

            <motion.p
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              transition={{ delay: 1.2 }}
              className="mt-12 text-xs text-gray-600"
            >
              {Copy.CORE_VALUE}
            </motion.p>
          </motion.div>
        )}

        {/* GENDER SELECTION */}
        {view === 'gender' && (
          <motion.div
            key="gender"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="flex items-center justify-center min-h-screen px-6"
          >
            <div className="max-w-2xl w-full text-center space-y-12">
              <div>
                <h2 className="text-divineo-gold text-xs tracking-[0.3em] uppercase mb-4 font-bold">
                  Personalization
                </h2>
                <p className="text-4xl font-luxury tracking-tight leading-tight text-divineo-beige">
                  Tell us about yourself
                </p>
              </div>

              <div className="grid grid-cols-2 gap-6">
                <motion.button
                  whileHover={{ scale: 1.05 }}
                  whileTap={{ scale: 0.95 }}
                  onClick={() => handleSelectGender('male')}
                  className="py-12 px-6 border-2 border-divineo-gold text-divineo-gold text-lg font-bold uppercase tracking-[0.2em] hover:bg-divineo-gold hover:text-divineo-anthracite transition-all rounded-lg shadow-[0_0_20px_rgba(197,164,109,0.2)]"
                >
                  Male
                </motion.button>
                <motion.button
                  whileHover={{ scale: 1.05 }}
                  whileTap={{ scale: 0.95 }}
                  onClick={() => handleSelectGender('female')}
                  className="py-12 px-6 border-2 border-divineo-gold text-divineo-gold text-lg font-bold uppercase tracking-[0.2em] hover:bg-divineo-gold hover:text-divineo-anthracite transition-all rounded-lg shadow-[0_0_20px_rgba(197,164,109,0.2)]"
                >
                  Female
                </motion.button>
              </div>
            </div>
          </motion.div>
        )}

        {/* SCANNING */}
        {view === 'scanning' && (
          <motion.div
            key="scanning"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="flex flex-col items-center justify-center min-h-screen px-6"
          >
            <div className="max-w-4xl w-full grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              
              {/* Webcam */}
              <div className="relative rounded-lg overflow-hidden border-2 border-divineo-gold shadow-[0_0_30px_rgba(197,164,109,0.3)]">
                <Webcam
                  ref={webcamRef}
                  audio={false}
                  screenshotFormat="image/jpeg"
                  className="w-full h-auto"
                />
                
                {/* Scan Line */}
                <div className="absolute inset-0 pointer-events-none">
                  <motion.div
                    animate={{ y: ['0%', '100%'] }}
                    transition={{ duration: 2, repeat: Infinity, ease: 'linear' }}
                    className="absolute w-full h-1 bg-gradient-to-r from-transparent via-divineo-gold to-transparent opacity-70"
                  />
                </div>

                {/* Corner Markers */}
                <div className="absolute top-4 left-4 w-8 h-8 border-t-2 border-l-2 border-divineo-gold"></div>
                <div className="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-divineo-gold"></div>
                <div className="absolute bottom-4 left-4 w-8 h-8 border-b-2 border-l-2 border-divineo-gold"></div>
                <div className="absolute bottom-4 right-4 w-8 h-8 border-b-2 border-r-2 border-divineo-gold"></div>
              </div>

              {/* Info */}
              <div className="space-y-8">
                <div>
                  <h2 className="text-divineo-gold text-xs tracking-[0.3em] uppercase mb-4 font-bold">
                    Active Scanning
                  </h2>
                  <p className="text-4xl font-luxury tracking-tight leading-tight text-divineo-beige mb-4">
                    {Copy.SCANNING_FEEDBACK}
                  </p>
                  <p className="text-gray-400 text-sm leading-relaxed">
                    Precision is calibrated with real store data. {Copy.PRIVACY_NOTICE}
                  </p>
                </div>

                {/* Progress Bar */}
                <div className="space-y-4">
                  <div className="h-2 bg-white/10 rounded-full overflow-hidden">
                    <motion.div
                      initial={{ width: 0 }}
                      animate={{ width: `${scanProgress}%` }}
                      className="h-full bg-gradient-to-r from-divineo-gold to-divineo-peacock"
                    />
                  </div>
                  <p className="text-divineo-gold text-sm font-bold">
                    {scanProgress < 100 ? `${scanProgress}% Analyzingâ€¦` : Copy.SCAN_COMPLETE}
                  </p>
                </div>
              </div>
            </div>
          </motion.div>
        )}

        {/* QUESTIONS */}
        {view === 'questions' && (
          <motion.div
            key="questions"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="flex items-center justify-center min-h-screen px-6"
          >
            <div className="max-w-2xl w-full space-y-12">
              <div>
                <h2 className="text-divineo-gold text-xs tracking-[0.3em] uppercase mb-4 font-bold">
                  Preferences
                </h2>
                <p className="text-4xl font-luxury tracking-tight leading-tight text-divineo-beige">
                  Tell us about your style
                </p>
              </div>

              {/* Occasion */}
              <div className="space-y-4">
                <label className="text-divineo-beige text-sm uppercase tracking-[0.2em] font-bold">
                  What's the occasion?
                </label>
                <div className="grid grid-cols-3 gap-4">
                  {['Work', 'Event', 'Daily'].map(opt => (
                    <motion.button
                      key={opt}
                      whileHover={{ scale: 1.05 }}
                      whileTap={{ scale: 0.95 }}
                      onClick={() => setOccasion(opt)}
                      className={`py-4 px-6 text-sm uppercase tracking-[0.15em] font-bold transition-all rounded-lg ${
                        occasion === opt
                          ? 'bg-divineo-gold text-divineo-anthracite shadow-[0_0_20px_rgba(197,164,109,0.5)]'
                          : 'border-2 border-divineo-gold text-divineo-gold hover:bg-divineo-gold/10'
                      }`}
                    >
                      {opt}
                    </motion.button>
                  ))}
                </div>
              </div>

              {/* Feeling */}
              <div className="space-y-4">
                <label className="text-divineo-beige text-sm uppercase tracking-[0.2em] font-bold">
                  How do you want to feel?
                </label>
                <div className="grid grid-cols-3 gap-4">
                  {['Fitted', 'Fluid', 'Relaxed'].map(opt => (
                    <motion.button
                      key={opt}
                      whileHover={{ scale: 1.05 }}
                      whileTap={{ scale: 0.95 }}
                      onClick={() => setFeeling(opt)}
                      className={`py-4 px-6 text-sm uppercase tracking-[0.15em] font-bold transition-all rounded-lg ${
                        feeling === opt
                          ? 'bg-divineo-gold text-divineo-anthracite shadow-[0_0_20px_rgba(197,164,109,0.5)]'
                          : 'border-2 border-divineo-gold text-divineo-gold hover:bg-divineo-gold/10'
                      }`}
                    >
                      {opt}
                    </motion.button>
                  ))}
                </div>
              </div>

              {/* CTA */}
              <motion.button
                whileHover={{ scale: 1.02 }}
                whileTap={{ scale: 0.98 }}
                onClick={handleFinishQuestions}
                className="w-full py-5 bg-divineo-gold text-divineo-anthracite text-sm font-bold uppercase tracking-[0.25em] rounded-full shadow-[0_0_30px_rgba(197,164,109,0.4)] hover:shadow-[0_0_50px_rgba(197,164,109,0.6)] transition-all"
              >
                Reveal My Perfect Garment
              </motion.button>
            </div>
          </motion.div>
        )}

        {/* RESULT */}
        {view === 'result' && recommendation && (
          <motion.div
            key="result"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="flex items-center justify-center min-h-screen px-6 py-12"
          >
            <div className="max-w-6xl w-full grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              
              {/* Image */}
              <motion.div
                initial={{ x: -50, opacity: 0 }}
                animate={{ x: 0, opacity: 1 }}
                transition={{ delay: 0.2 }}
                className="relative rounded-lg overflow-hidden border-2 border-divineo-gold shadow-[0_0_40px_rgba(197,164,109,0.3)]"
              >
                <img
                  src={recommendation.image}
                  alt={recommendation.name}
                  className="w-full h-auto object-cover"
                />
              </motion.div>

              {/* Details */}
              <motion.div
                initial={{ x: 50, opacity: 0 }}
                animate={{ x: 0, opacity: 1 }}
                transition={{ delay: 0.4 }}
                className="space-y-8"
              >
                <div>
                  <h2 className="text-divineo-gold text-xs tracking-[0.3em] uppercase mb-4 font-bold">
                    Your Curated Selection
                  </h2>
                  <h3 className="text-5xl font-luxury tracking-tight text-divineo-beige mb-6">
                    {recommendation.name}
                  </h3>
                  <p className="text-divineo-beige text-lg italic border-l-4 border-divineo-gold pl-6 py-2">
                    "{recommendation.human_message}"
                  </p>
                </div>

                {/* Explanation */}
                <div className="bg-divineo-gold/10 border border-divineo-gold/30 rounded-lg p-6">
                  <p className="text-divineo-beige text-sm leading-relaxed">
                    {recommendation.fit_score > 95 ? Copy.HERO_EXPLANATION : Copy.CAP_EXPLANATION}
                  </p>
                </div>

                {/* Specs */}
                <div className="grid grid-cols-2 gap-4 text-sm">
                  <div className="bg-white/5 p-5 rounded-lg border border-divineo-gold/30">
                    <p className="text-gray-500 text-xs uppercase mb-2">Type</p>
                    <p className="text-divineo-beige font-semibold text-lg">{recommendation.type}</p>
                  </div>
                  <div className="bg-white/5 p-5 rounded-lg border border-divineo-gold/30">
                    <p className="text-gray-500 text-xs uppercase mb-2">Cut</p>
                    <p className="text-divineo-beige font-semibold text-lg">{recommendation.cut}</p>
                  </div>
                </div>

                {/* CTAs */}
                <div className="grid grid-cols-2 gap-4 pt-4">
                  <motion.button
                    whileHover={{ scale: 1.05 }}
                    whileTap={{ scale: 0.95 }}
                    className="py-4 bg-divineo-gold text-divineo-anthracite text-xs font-bold uppercase tracking-[0.2em] rounded-full shadow-[0_0_20px_rgba(197,164,109,0.4)]"
                  >
                    Shop Now
                  </motion.button>
                  <motion.button
                    whileHover={{ scale: 1.05 }}
                    whileTap={{ scale: 0.95 }}
                    onClick={handleRestart}
                    className="py-4 border-2 border-divineo-gold text-divineo-gold text-xs font-bold uppercase tracking-[0.2em] rounded-full hover:bg-divineo-gold/10"
                  >
                    Restart
                  </motion.button>
                </div>

                {/* Commercial Message */}
                <div className="pt-6 border-t border-divineo-gold/20">
                  <p className="text-xs text-gray-400 text-center">
                    {Copy.FINAL_CTA_RETAIL}
                  </p>
                </div>
              </motion.div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
};

export default Home;
