{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "tryonyou-ultimatum",
  "public": true,
  "alias": ["www.tryonyou.app"],
  "cleanUrls": true,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/en",
      "destination": "/?lang=en",
      "permanent": false
    },
    {
      "source": "/es",
      "destination": "/?lang=es",
      "permanent": false
    },
    {
      "source": "/fr",
      "destination": "/?lang=fr",
      "permanent": false
    }
  ],
  "images": {
    "sizes": [320, 640, 1080, 1920],
    "formats": ["image/webp", "image/png", "image/jpeg"],
    "domains": ["tryonyou.app"]
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|webp|woff|woff2))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(mp4|webm))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800"
        }
      ]
    }
  ]
}
