{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",

  "regions": ["iad1", "sfo1"],

  "rewrites": [
    {
      "source": "/docs/investors/(.*)",
      "destination": "/docs/investors/$1"
    },
    {
      "source": "/docs/logistics/(.*)",
      "destination": "/docs/logistics/$1"
    },
    {
      "source": "/docs/legal/(.*)",
      "destination": "/docs/legal/$1"
    },
    {
      "source": "/docs/patent/(.*)",
      "destination": "/docs/patent/$1"
    },
    {
      "source": "/docs/dashboard/(.*)",
      "destination": "/docs/dashboard/$1"
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/deploy",
      "destination": "/dashboard",
      "permanent": false
    },
    {
      "source": "/abvetos",
      "destination": "/dashboard",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/docs/(.*\\.(pdf|csv|md|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "Content-Disposition",
          "value": "inline"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_ENV": "production"
  },
  "github": {
    "enabled": true,
    "silent": false,
    "autoJobCancelation": true
  }
}
