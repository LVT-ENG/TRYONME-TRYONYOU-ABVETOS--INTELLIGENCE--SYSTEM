{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",

  "rewrites": [
    {
      "source": "/docs/investors/(.*)",
      "destination": "/docs/investors/$1"
    },
    {
      "source": "/docs/logistics/(.*)",
      "destination": "/docs/logistics/$1"
    },
    {
      "source": "/docs/legal/(.*)",
      "destination": "/docs/legal/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/docs/(.*\\.(pdf|csv|md))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "Content-Disposition",
          "value": "inline"
        }
      ]
    }
  ],
  "regions": ["iad1", "cdg1", "dxb1"],
  "env": {
    "NODE_ENV": "production",
    "VITE_ENV": "production"
  },
  "github": {
    "enabled": true,
    "silent": false,
    "autoJobCancelation": true
  }
}
